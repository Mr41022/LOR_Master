{
  "rules": {
    "users": {
      "students": {
        "$student_id": {
          ".read": "auth != null && auth.uid === $student_id",
          ".write": "auth != null && auth.uid === $student_id"
        }
      },
      "faculty": {
        "$faculty_id": {
          ".read": "auth != null && auth.uid === $faculty_id",
          ".write": "auth != null && auth.uid === $faculty_id"
        }
      },
      "principals": {
        "$principal_id": {
          ".read": "auth != null && auth.uid === $principal_id",
          ".write": "auth != null && auth.uid === $principal_id"
        }
      }
    },
    "lors": {
      "$lor_id": {
        ".read": "auth != null && (data.child('student_id').val() === auth.uid || data.child('faculty_id').val() === auth.uid || data.child('principal_id').val() === auth.uid)",
        ".write": "auth != null && (auth.uid === data.child('student_id').val() || auth.uid === data.child('faculty_id').val() || auth.uid === data.child('principal_id').val())"
      }
    },
    "notifications": {
      "$user_id": {
        ".read": "auth != null && auth.uid === $user_id",
        ".write": "auth != null && auth.uid === $user_id"
      }
    }
  }
}
